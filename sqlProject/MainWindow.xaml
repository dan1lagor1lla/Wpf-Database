<Window x:Class="sqlProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:sqlProject"
        mc:Ignorable="d"
        Title="StartUpWindow"
        WindowStyle="ToolWindow"
        WindowStartupLocation="CenterScreen"
        Height="950" Width="1050" 
        MinHeight="500" MinWidth="500"
        FontFamily="Georgia"
        Style="{DynamicResource WindowStyle}">
    <Window.Resources>
        <ResourceDictionary Source="styles\StartUpWindowStyle.xaml"/>
    </Window.Resources>
    <Grid>
        <StackPanel Margin="50 0" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Чтобы начать, войдите в систему"/>
            <TextBox/>
            <PasswordBox/>
            <Button Click="Button_Click" Content="Войти"/>
        </StackPanel>
    </Grid>
</Window>
